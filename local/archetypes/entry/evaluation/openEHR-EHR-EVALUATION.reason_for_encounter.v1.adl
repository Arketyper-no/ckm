									at0013, 	-- Enkel pasientkontakt med fremmøte
									at0014, 	-- Enkel pasientkontakt uten fremmøte
									at0015, 	-- Enkel pasientkontakt - e-resept
									at0016, 	-- Kontakt med samarbeidende instans
									at0017, 	-- Konsultasjon
									at0018, 	-- Sykebesøk
									at0019, 	-- E-konsultasjon
									at0020]	-- Bedriftsundersøkelse
								}
							}
							DV_TEXT matches {*}
						}
					}
					ELEMENT[at0004] occurrences matches {0..*} matches {	-- Klinisk problemstilling
						value matches {
							DV_TEXT matches {*}
						}
					}
					allow_archetype CLUSTER[at0011] occurrences matches {0..*} matches {	-- *Cluster(en)
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}


