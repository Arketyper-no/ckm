definition
	EVALUATION[at0000] matches {	-- Family History
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Summary
						value matches {
							DV_TEXT matches {*}
						}
					}
					CLUSTER[at0003] occurrences matches {0..*} matches {	-- Genetic relative
						items cardinality matches {1..*; unordered} matches {
							ELEMENT[at0004] occurrences matches {0..1} matches {	-- Name
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0020] occurrences matches {0..1} matches {	-- Alias
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0016] occurrences matches {0..1} matches {	-- Relationship
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0005] occurrences matches {0..1} matches {	-- Date of Birth
								value matches {
									DV_DATE_TIME matches {*}
								}
							}
							ELEMENT[at0023] occurrences matches {0..1} matches {	-- Deceased?
								value matches {
									DV_BOOLEAN matches {
										value matches {True}
									}
								}
							}
							ELEMENT[at0011] occurrences matches {0..1} matches {	-- Age at Death
								value matches {
									DV_DURATION matches {*}
								}
							}
							CLUSTER[at0008] occurrences matches {0..*} matches {	-- Medical History
								items cardinality matches {1..*; unordered} matches {
									ELEMENT[at0009] occurrences matches {0..1} matches {	-- Problem/Diagnosis
										value matches {
											DV_TEXT matches {*}
										}
									}
									ELEMENT[at0012] occurrences matches {0..1} matches {	-- Clinical Description
										value matches {
											DV_TEXT matches {*}
										}
									}
									ELEMENT[at0010] occurrences matches {0..1} matches {	-- Age at Onset
										value matches {
											DV_DURATION matches {*}
										}
									}
									ELEMENT[at0014] occurrences matches {0..1} matches {	-- Cause of Death?
										value matches {
											DV_BOOLEAN matches {
												value matches {True, False}
											}
										}
									}
								}
							}
							CLUSTER[at0024] occurrences matches {0..1} matches {	-- Genetic Markers
								items cardinality matches {1..*; unordered} matches {
									ELEMENT[at0022] occurrences matches {0..1} matches {	-- Marker Description
										value matches {
											DV_TEXT matches {*}
										}
									}
									allow_archetype ITEM[at0027] occurrences matches {0..*} matches {	-- Genetic Marker Details
										include
											archetype_id/value matches {/.*/}
									}
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0025] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0026] occurrences matches {0..1} matches {	-- Last updated
						value matches {
							DV_TEXT matches {*}
						}
					}
				}
			}
		}
	}


ontology
	term_definitions = <
		["en"] = <
			items = <
				["at0000"] = <
					text = <"Family History">
					description = <"Summary information about the problems and/or diagnoses found in genetic relatives.">
				>
				["at0001"] = <
					text = <"Tree">
					description = <"@ internal @">
				>
				["at0002"] = <
					text = <"Summary">
					description = <"Textual description about the problems, diagnoses, and genetic markers found in genetic relatives. This field may be used to capture unstructured family history information recorded in clinical records.">
				>
				["at0003"] = <
					text = <"Genetic relative">
					description = <"Details about a specific genetic relative.">
				>
				["at0004"] = <
					text = <"Name">
					description = <"Name of genetic relative.">
					comment = <"For privacy reasons this may not be appropriate for sharing or public display and in this situation the 'label' should be used.">
				>
				["at0005"] = <
					text = <"Date of Birth">
					description = <"Date of birth of the genetic relative.">
					comment = <"At least a partial date will be useful to calculate an age. For example, current age of relative in a pedigree chart.">
				>
				["at0008"] = <
					text = <"Medical History">
					description = <"Detail about problems or diagnoses for the genetic relative.">
				>
				["at0009"] = <
					text = <"Problem/Diagnosis">
					description = <"Identification of the genetic relative's problem or diagnosis.">
					comment = <"Coding of the problem or diagnosis with a terminology is preferred, where possible. May link from this data element to a detailed record of a Problem/Diagnosis using the EVALUATION.problem_diagnosis archetype with the Subject of Care set to the genetic relative, not to the patient.">
				>
				["at0010"] = <
					text = <"Age at Onset">
					description = <"Estimated or actual age of the genetic relative when the problem/diagnosis was clinically recognised.">
				>
				["at0011"] = <
					text = <"Age at Death">
					description = <"Age of the genetic relative at death.">
				>
				["at0012"] = <
					text = <"Clinical Description">
					description = <"Narrative description or comments about clinical aspects of the genetic relative's problem/diagnosis.">
				>
				["at0014"] = <
					text = <"Cause of Death?">
					description = <"True if the problem/diagnosis was a direct cause of death in this genetic relative.">
				>
				["at0016"] = <
					text = <"Relationship">
					description = <"The relationship of the genetic relative to the individual.">
					comment = <"Coding of the relationship with a terminology is preferred, where possible and including specification of maternal and paternal as required.">
				>
				["at0020"] = <
					text = <"Alias">
					description = <"An alias or label to uniquely identify a genetic relative, without using a personal name.">
					comment = <"To be used to assist in distinguishing one individual from multiple genetic relatives with identical relationships. For example, the label to distinguish one specific sister from three known sisters might be 'eldest sister' or 'sister #1'.">
				>
				["at0022"] = <
					text = <"Marker Description">
					description = <"Description of risk-related genetic markers identified in this genetic relative.">
				>
				["at0023"] = <
					text = <"Deceased?">
					description = <"Is the genetic relative is deceased?">
					comment = <"Record as 'True' if genetic relative is deceased.">
				>
				["at0024"] = <
					text = <"Genetic Markers">
					description = <"Detailed genetic marker information for the genetic relative.">
					comment = <"Note: More data elements will be needed in future to record detailed genetic marker information.">
				>
				["at0025"] = <
					text = <"Tree">
					description = <"@ internal @">
				>
				["at0026"] = <
					text = <"Last updated">
					description = <"Date that thisFamily History Summary was last updated.">
				>
				["at0027"] = <
					text = <"Genetic Marker Details">
					description = <"Details about the relative's genetic markers.">
				>
			>
		>
		["nb"] = <
			items = <
				["at0000"] = <
					text = <"Familiehistorie">
					description = <"Sammenfattet informasjon om problemer og/eller diagnoser hos slektninger.">
				>
				["at0001"] = <
					text = <"Tree">
					description = <"@ internal @">
				>
				["at0002"] = <
					text = <"Sammenfatning">
					description = <"Tekstlig beskrivelse av problemer, diagnoser og genetiske markører funnet i slekten. Dette feltet kan brukes for å nedtegne ustrukturerte data om familiehistorie som er registrert i journalen.">
				>
				["at0003"] = <
					text = <"Genetisk slektning">
					description = <"Detaljer om en bestemt genetisk slektning.">
				>
				["at0004"] = <
					text = <"Navn">
					description = <"Navn på den genetiske slektningen.">
					comment = <"Grunnet taushetsplikt kan det være uaktuelt å registrere eller dele dette i journalen. I slike tilfeller kan med fordel alias benyttes.">
				>
				["at0005"] = <
					text = <"Fødselsdato">
					description = <"Fødselsdatoen til slektningen.">
					comment = <"Deler av en dato kan være nyttige for å kalkulere alder og sette opp stamtavle. For eksempel nåværende alder.">
				>
				["at0008"] = <
					text = <"Anamnese">
					description = <"Detaljer om slektningens helseproblemer eller diagnoser.">
				>
				["at0009"] = <
					text = <"Problem/Diagnose">
					description = <"Identifisering av slektningens problem eller diagnose.">
					comment = <"Bruk av koder fra terminologi er foretrukket, dersom mulig, for koding av problem eller diagnose. En kan lenke fra dette dataelementet til en detaljert registrering av et problem eller en diagnose ved hjelp av EVALUATION.problem_diagnosis arketypen hvor Subject of Care er satt til genetiske slekning, ikke til pasienten.">
				>
				["at0010"] = <
					text = <"Debutalder">
					description = <"Anslått eller eksakt alder for den genetiske slektningen ved diagnostisering av problemet eller diagnosen.">
				>
				["at0011"] = <
					text = <"Alder ved død">
					description = <"Alder til den genetiske slektningen ved død.">
				>
				["at0012"] = <
					text = <"Klinisk beskrivelse">
					description = <"Tekstlig beskrivelse eller kommentarer om kliniske aspekter ved den genetiske slektningens problem eller diagnose.">
				>
				["at0014"] = <
					text = <"Dødsårsak">
					description = <"Sann om problemet eller diagnosen var en direkte årsak til dødsfallet til den genetiske slektningen.">
				>
				["at0016"] = <
					text = <"Relasjon">
					description = <"Relasjonen mellom den genetiske slektningen og individet.">
					comment = <"Om mulig skal relasjonen kodes med et bestemt kodeverk. Dette gjelder også registrering av om relasjonen er knyttet til mor eller fars side av slekten.">
				>
				["at0020"] = <
					text = <"Alias">
					description = <"Et alias eller en merkelapp som muliggjør identifisering av slektningen uten å registrere vedkommendes navn.">
					comment = <"For å kunne skille mellom genetiske slektninger med samme slektsrelasjon. For eksempel kan en merkelapp skille ut en søster blant tre søstre ved å benytte \"eldste søster\" eller søster nr. 1.">
				>
				["at0022"] = <
					text = <"Breskrivelse av markørene">
					description = <"Beskrivelse av de risikorelaterte genetiske markører som er identifisert hos denne genetiske slektningen.">
				>
				["at0023"] = <
					text = <"Avdød">
					description = <"Er slektningen død?">
					comment = <"Registreres som \"ja\" om slektningen er død.">
				>
				["at0024"] = <
					text = <"Genetiske Markører">
					description = <"Detaljert oversikt over genetiske markører hos den genetiske slektningen.">
					comment = <"NB: Man vil i framtiden ha behov for flere dataelementer for å dokumentere detaljert informasjon fra de genetiske markørene.">
				>
				["at0025"] = <
					text = <"Tree">
					description = <"@ internal @">
				>
				["at0026"] = <
					text = <"Sist oppdatert">
					description = <"Dato for når denne familiehistorien sist var oppdatert.">
				>
				["at0027"] = <
					text = <"Detaljer Genetiske Markører">
					description = <"Detaljer knyttet til den genetiske slektningens genetiske markører.">
				>
			>
		>
	>
