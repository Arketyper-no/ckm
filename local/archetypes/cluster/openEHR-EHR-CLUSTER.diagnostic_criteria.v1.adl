definition
	CLUSTER[at0000] matches {	-- Diagnostic criteria
		items cardinality matches {1..*; unordered} matches {
			ELEMENT[at0001] occurrences matches {0..1} matches {	-- Definition
				value matches {
					DV_TEXT matches {*}
				}
			}
			ELEMENT[at0002] occurrences matches {0..*} matches {	-- Sources for definition
				value matches {
					DV_TEXT matches {*}
				}
			}
			ELEMENT[at0003] occurrences matches {0..1} matches {	-- Criteria
				value matches {
					DV_TEXT matches {*}
				}
			}
			ELEMENT[at0007] occurrences matches {0..1} matches {	-- Activity status
				value matches {
					DV_CODED_TEXT matches {
						defining_code matches {
							[local::
							at0008, 	-- Active
							at0009, 	-- Obsolete
							at0010]	-- Inactive
						}
					}
				}
			}
			ELEMENT[at0011] occurrences matches {0..1} matches {	-- Completeness
				value matches {
					DV_BOOLEAN matches {
						value matches {True, False}
					}
				}
			}
			ELEMENT[at0012] occurrences matches {0..1} matches {	-- Comment
				value matches {
					DV_TEXT matches {*}
				}
			}
		}
	}



ontology
	term_definitions = <
		["en-gb"] = <
			items = <
				["at0000"] = <
					text = <"Diagnostic criteria">
					description = <"Definition and criteria a diagnosis is based on.">
				>
				["at0001"] = <
					text = <"Definition">
					description = <"The definition of the disease currently used by the involved health care institution or the involved health care provider.">
				>
				["at0002"] = <
					text = <"Sources for definition">
					description = <"Sources for current definition. This may for example be a reference to a textbook, a \"guideline\" paper, a \"consensus\" paper or a \"conference proceeding.\"">
				>
				["at0003"] = <
					text = <"Criteria">
					description = <"The specific combination of signs, symptoms or test results used for making the diagnosis.">
				>
				["at0007"] = <
					text = <"Activity status">
					description = <"Current status for the definition and the corresponding critieria.">
				>
				["at0008"] = <
					text = <"Active">
					description = <"In use.">
				>
				["at0009"] = <
					text = <"Obsolete">
					description = <"Had been used and is no longer in use.">
				>
				["at0010"] = <
					text = <"Inactive">
					description = <"Not in use.">
				>
				["at0011"] = <
					text = <"Completeness">
					description = <"A statement whether the criteria are met. The dataelement should only be used, if the activity status is set to \"active\".">
				>
				["at0012"] = <
					text = <"Comment">
					description = <"A comment about selection of, status for or completeness of the criteria.">
				>
			>
		>
		["nb"] = <
			items = <
				["at0000"] = <
					text = <"Diagnostic criteria">
					description = <"Kriteriene og definisjonen en diagnose er basert på.">
				>
				["at0001"] = <
					text = <"Definisjon">
					description = <"Sykdomsdefinisjon for tiden brukt av deltakende helseinstitusjon eller 
av deltakende helsepersonell.">
				>
				["at0002"] = <
					text = <"Kilder til definisjonen">
					description = <"Kilder for aktuell definisjon. Dette kan for eksempel være referanser til en lærebok, til en artikkel med retningslinjer, til en \"consensus\" artikkel eller til et møteprotokoll.">
				>
				["at0003"] = <
					text = <"Kriterier">
					description = <"Den spesifikke kombinasjonen av tegn, symptomer eller testresultater, som er brukt for å stille diagnosen.">
				>
				["at0007"] = <
					text = <"Aktivitetsstatus">
					description = <"Gjeldende status for den angitte definisjonen og tilhørende kriterier.">
				>
				["at0008"] = <
					text = <"Aktiv">
					description = <"For tiden i bruk.">
				>
				["at0009"] = <
					text = <"Utdatert">
					description = <"Har vært i bruk og er ikke lenger i bruk.">
				>
				["at0010"] = <
					text = <"Inaktiv">
					description = <"Ikke i bruk.">
				>
				["at0011"] = <
					text = <"Fullstendighet">
					description = <"En uttalelse om kriteriene er oppfylt. Dataelementet skal bare brukes om aktivitetsstatus er satt til \"aktiv\".">
				>
				["at0012"] = <
					text = <"Kommentar">
					description = <"En kommentar om utvalg, status eller fullstendighet av kriteriene.">
				>
			>
		>
	>
