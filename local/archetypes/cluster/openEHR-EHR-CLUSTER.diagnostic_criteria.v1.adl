	details = <
		["en-gb"] = <
			language = <[ISO_639-1::en-gb]>
			purpose = <"To document the definition and criteria used to make the diagnosis.">
			use = <"Used to specify the definition and diagnostic criteria for a diagnosis. This will often be pre-filled data fields, which document the definition and the criteria used in the temporal and local context. Pre-filled data fields will also provide support to the health care provider in a diagnostic situation. Contains a statement, whether the criteria are met. Can also be used to specify obsolete definitions or diagnostic criteria, which should not be used or have not been used in the diagnostic situation.">
			keywords = <"Diagnosis", ...>
			misuse = <"Shall not be used to record observed data. For this use relevant OBSERVATION archetypes.">
			copyright = <"© Nasjonal IKT HF">
		>
		["nb"] = <
			language = <[ISO_639-1::nb]>
			purpose = <"Å dokumentere definisjonen og kriteriene brukt til å lage diagnosen.">
			use = <"Brukes til å oppgi definisjon og diagnostiske kriterier for en diagnose. Dette vil ofte være forhåndsutfylte datafelt, som dokumenterer definisjonen og kriteriene brukt i timelig og lokal kontekst. Forhåndsutfylte datafelt vil samtidig gi helsepersonell informasjonsstøtte i en diagnostisk situasjon. Inneholder en erklæring, om  kriteriene er oppfylt.  Kan også brukes til å angi foreldede definisjoner eller diagnostiske kriterier, som ikke skal brukes eller er brukt i den diagnostiske situasjonen.">
			keywords = <"Diagnose", ...>
			misuse = <"Skal ikke brukes til å nedtegne observerte data. Til dette brukes relevante OBSERVATION-arketyper.">
			copyright = <"© Nasjonal IKT HF">
		>
	>
